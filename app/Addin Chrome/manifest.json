{
  "manifest_version": 2,
              
  "name": "Orange Confort+"
  ,"description": "Orange Confort+"
  ,"version": "1.0.0.0"

  ,"permissions": [
    "tabs",
    "webNavigation",
    "http://*/",
    "https://*/"
  ]
  ,"browser_action": {
    "default_title": "Orange Confort+"
    ,"default_icon": {
      "19": "data/icon-19.png",
      "38": "data/icon-38.png"          
      } 
  },          
  "author": "Orange SA",
  "homepage_url": "http://confort-plus.orange.com/",
  "background": {
    "scripts": ["js/main.js"]
    ,"persistent": true
  }
  ,"web_accessible_resources": [
  	"css/*.css",
  	"js/*.js",
  	"images/*.png"
  ]
  ,"content_scripts": [{
   "matches": ["<all_urls>"],
   "js": ["js/concat.js"],
   "run_at": "document_end"
  }],
  "icons": { "16": "data/icon-16.png",
             "48": "data/icon-32.png",
            "128": "data/icon-64.png" }
}